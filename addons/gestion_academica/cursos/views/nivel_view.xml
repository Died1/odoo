        <field name="name">Niveles</field>
        <field name="res_model">academica.nivel</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista de árbol para Nivel -->
    <record id="view_nivel_tree" model="ir.ui.view">
        <field name="name">academica.nivel.tree</field>
        <field name="model">academica.nivel</field>
        <field name="arch" type="xml">
            <tree string="Niveles">
                <field name="nombre"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

