<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action for Curso Aula -->
    <record model="ir.actions.act_window" id="academica_inscripcion_action">
        <field name="name">Inscripciones</field>
        <field name="res_model">academica.inscripcion</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_inscripcion_tree" model="ir.ui.view">
        <field name="name">academica.inscripcion.tree</field>
        <field name="model">academica.inscripcion</field>
        <field name="arch" type="xml">
            <tree string="Inscripciones"> <!-- Etiqueta opcional para la vista de lista -->
                <field name="gestion_id" /> <!-- Campo a mostrar en la lista -->
                <field name="paralelo_id" /> <!-- Campo a mostrar en la lista -->
                <field name="estudiante_id" /> <!-- Campo a mostrar en la lista -->
                <field name="fecha_inscripcion" />
            </tree>
        </field>
    </record>

</odoo>